@model IEnumerable<BeerFinder.Models.BieresRecord>

@{
    ViewBag.Title = "ListerBieres";
}

<h2>ListerBieres</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <a href='@Url.Action("Trier", "Bieres",new {sortBy = "NomBiere"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/Sort.png")'
                     alt="Ajouter" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Titre" />
                @Html.DisplayNameFor(model => model.NomBiere)
        </th>
        <th>
            <a href='@Url.Action("Trier", "Bieres",new {sortBy = "NomType"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/Sort.png")'
                     alt="Ajouter" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Titre" />
                @Html.DisplayNameFor(model => model.NomType)
        </th>
        <th>
            <a href='@Url.Action("Trier", "Bieres",new {sortBy = "Brasserie"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/Sort.png")'
                     alt="Ajouter" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Titre" />
                @Html.DisplayNameFor(model => model.Brasserie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VolumeAlcool)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Etiquette)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomBiere)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brasserie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VolumeAlcool)
        </td>
        <td>
            <img id="new_image" class="img-rounded" src="@Url.Content("~" +item.GetEtiquetteURL())" class="img-rounded" style="max-width:60px; max-height:60px;" />  
        </td>
        <td>
            <span class="glyphicon glyphicon-search" onclick="location.href='@Url.Action("DetailsBiere", "Bieres", new { id = item.Id })'"></span> |
            <span class="glyphicon glyphicon-pencil" onclick="location.href='@Url.Action("EditerBieres", "Bieres", new { id = item.Id })'"></span> |
            <span class="glyphicon glyphicon-trash" onclick="BBConfirm('Êtes-vous sûr de vouloir supprimer @item.NomBiere ?', '@Url.Action("SupprimerBieres", "Bieres", new { id=item.Id })')"></span>
        </td>
    </tr>
}

</table>
