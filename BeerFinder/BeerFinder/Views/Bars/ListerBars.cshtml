@model IEnumerable<BeerFinder.Models.BarsRecord>

@{
    ViewBag.Title = "Lister les bars";
}

<h2>Liste des bars</h2>

<p>
    @Html.ActionLink("Ajouter un bar", "AjouterBars")
</p>
<table class="table">
    <tr>
        <th>
            <a href='@Url.Action("Trier", "Bars",new {sortBy = "NomBar"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/Sort.png")'
                     alt="Ajouter" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Bar" />
            </a>
            @Html.DisplayNameFor(model => model.NomBar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomBar)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Adresse)
        </td>
        <td>
            <img id="new_image" class="img-rounded" src="@Url.Content("~" +item.GetLogoURL())" class="poster" style="max-width:60px; max-height:60px;"/>
        </td>
        <td>
            <span class="glyphicon glyphicon-pencil" onclick="location.href='@Url.Action("EditerBar", "Bars", new { id = item.Id })'"></span> |
            <span class="glyphicon glyphicon-trash" onclick="BBConfirm('Êtes-vous sûr de vouloir supprimer @item.NomBar ?', '@Url.Action("SupprimerBar", "Bars", new { id=item.Id })')"></span> |
            <span style="position:relative; top:-3px" onclick="location.href='@Url.Action("AfficherSelections", "Selections", new { id = item.Id }, null)'"><img src="~/Images/drink24.png" style="height:17px; width:14px; padding:0; margin:0; cursor:pointer" /></span>
           
        </td>
          
    </tr>
}

</table>
